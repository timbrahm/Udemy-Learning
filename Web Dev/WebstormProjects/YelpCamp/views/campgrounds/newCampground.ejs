<%- include('../partials/header') %>

<div class="container">
        <h1 style="text-align: center">Create a New Campground</h1>

        <div class="" style='width: 50%; margin: 25px auto'>
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Campground Name">
                </div>

                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Campground Price"
                           min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Image URL" name="image">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Description" name="description">
                </div>

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>

            <a class="btn btn-secondary btn-md mt-3" href="/campgrounds">Go Back</a>
        </div>

</div>


<%- include('../partials/footer') %>
