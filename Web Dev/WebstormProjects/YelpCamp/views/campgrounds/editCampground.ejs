<%- include('../partials/header') %>

<div class="container">
    <h1 style="text-align: center">Edit Campground</h1>

    <div class="" style='width: 50%; margin: 25px auto'>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="price" value="<%= campground.price %>"
                       min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="image" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="description" value="<%= campground.description %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>

        <a class="btn btn-secondary btn-md mt-3" href="/campgrounds">Go Back</a>
    </div>


<%- include('../partials/footer') %>
